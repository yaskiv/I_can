<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="home.antonyaskiv.i_can.View.SelectCategoriesActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout_select_wrap">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/check_box_wrap_1"
                android:paddingTop="20dp">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Uczelnia"
                    android:theme="@style/AppTheme.CheckBox"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/check_box_wrap_2"
                android:layout_below="@id/check_box_wrap_1"
                android:paddingTop="20dp">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:text="Uczelnia"
                    android:theme="@style/AppTheme.CheckBox" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/check_box_wrap_3"
                android:layout_below="@id/check_box_wrap_2"
                android:paddingTop="20dp">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:text="Uczelnia"
                    android:theme="@style/AppTheme.CheckBox" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/check_box_wrap_4"
                android:layout_below="@id/check_box_wrap_3"
                android:paddingTop="20dp">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:text="Uczelnia"
                    android:theme="@style/AppTheme.CheckBox" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/start_application"
                android:text="Save"
                android:onClick="OpenMainActivity"/>
        </RelativeLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
